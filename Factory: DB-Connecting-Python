#First install pip install mysql-connector-python
import mysql.connector
from mysql.connector import Error

class MySQLConnectionFactory:
    def __init__(self, host, user, password, database):
        self.host = host
        self.user = user
        self.password = password
        self.database = database

    def create_connection(self):
        try:
            connection = mysql.connector.connect(
                host=self.host,
                user=self.user,
                password=self.password,
                database=self.database
            )
            if connection.is_connected():
                print(f"Conectado ao banco de dados: {self.database}")
                return connection
        except Error as e:
            print(f"Erro ao conectar ao MySQL: {e}")
            return None

# Configurações de conexão
host = 'localhost'
user = 'root'
password = 'your_password'
database = 'your_database'

# Usando a fábrica para criar uma conexão
factory = MySQLConnectionFactory(host, user, password, database)
connection = factory.create_connection()

if connection:
    try:
        cursor = connection.cursor()
        cursor.execute("SELECT DATABASE();")
        db_name = cursor.fetchone()
        print(f"Banco de dados atual: {db_name[0]}")
    finally:
        connection.close()
 
